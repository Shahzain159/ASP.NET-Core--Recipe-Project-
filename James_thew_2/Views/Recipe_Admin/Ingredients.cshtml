@model James_thew_2.Models.DB_Models.Ingredient

@{
    ViewData["Title"] = "Ingredients";
    Layout = "~/Views/Shared/admin_layout.cshtml";
    var ing = (List<James_thew_2.Models.DB_Models.Ingredient>)ViewBag.i_data;
}


@{
    if (TempData.ContainsKey("ing_succ"))
    {
        <div class="alert alert-success" id="message">
            @TempData["ing_succ"]
        </div>
    }
}
<h1>Ingredients</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ingredients">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label"></label>
                <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IngredientName" class="control-label"></label>
                <input asp-for="IngredientName" class="form-control" />
                <span asp-validation-for="IngredientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ingredients Data</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ingredient</th>
                        <th>Recipe</th>

                    </tr>
                </thead>

                <tbody>

                    @{
                        foreach (var c in ing)
                        {
                            <tr>
                                <td>@c.IngredientName</td>
                                <td>@c.Recipe.RecipeTitle'</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>


