@model James_thew_2.Models.DB_Models.Recipe



@{ 
    Layout = "admin_layout";
    var ing = (List<James_thew_2.Models.DB_Models.Ingredient>)ViewBag.ing;
    var steps = (List<James_thew_2.Models.DB_Models.Step>)ViewBag.steps;
}

<div class="row">
       <div class="col col-6">
            <h2 class="text-center ">@Model.RecipeTitle</h2>
       </div>
        <div class="col col-3">
            <a asp-action="rec_confirm_delete" asp-route-data="@Model.RecipeId" class="btn btn-danger">Confirm Delete</a>
        </div>
</div>

<div class="row">

    <div class="col col-6">
         <h3>Ingredients</h3>
          <ul>
              @{
            foreach (var i in ing)
            {
                      <li>@i.IngredientName</li>
            }
              }
          </ul>
    </div>
    <div class="col col-4">
        <img width="300" height="400" src="@Model.RecipeImage" />
    </div>

</div>

<h3>Steps</h3>

    @{
        foreach (var s in steps)
        {
        <div class="row">
            <div class="col col-1">
                <h1>@s.StepNumber</h1>
            </div>
            <div class="col col-11">
                <p>@s.Description</p>
            </div>
        </div>
        }
    }
